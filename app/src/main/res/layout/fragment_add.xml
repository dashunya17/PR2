<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Название услуги -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название услуги*"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название"
            android:inputType="textCapWords"/>

        <!-- Описание -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите описание"
            android:inputType="textMultiLine"
            android:gravity="top"/>

        <!-- Имя тренера -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя тренера*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextTrainerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите имя тренера"
            android:inputType="textPersonName"/>

        <!-- Дата и время -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата и время*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/editTextData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Дата"
                android:inputType="date"
                android:focusable="false"/>

            <Button
                android:id="@+id/buttonSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выбрать дату"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Время"
                android:inputType="time"
                android:focusable="false"/>

            <Button
                android:id="@+id/buttonSelectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выбрать время"/>

        </LinearLayout>

        <!-- Цена -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена (руб)*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите цену"
            android:inputType="numberDecimal"/>

        <!-- Продолжительность -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжительность (мин)*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите продолжительность"
            android:inputType="number"/>

        <!-- Максимум клиентов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Максимум клиентов*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextMaxClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите максимальное количество"
            android:inputType="number"/>

        <!-- Доступные места -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доступные места*"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextAvailableSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите количество доступных мест"
            android:inputType="number"/>

        <!-- Кнопка добавления -->
        <Button
            android:id="@+id/buttonAddService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить услугу"
            android:layout_marginTop="32dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>